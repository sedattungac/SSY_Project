@using SSY_Project.Models.Entity
@model List<Data_Duyurular>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
}

<br />

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <div style="float:left">

                                <h4>Duyurular Listesi</h4>

                            </div>
                            <div style="float:right">
                                <p>
                                    <a href="/Annunciation/AddAnnunciation/" class="btn btn-warning"><i class="fas fa-plus"> </i> Yeni Duyuru Ekle</a>
                                </p>
                            </div>
                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var x in Model)
                                    {

                                        <div class="time-label">
                                            <span class="bg-success">
                                                @(((DateTime)@x.TARIH).ToString("dd MMMMMMM yyyy"))
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            @*<i class="fas fa-star bg-orange"></i>*@
                                            <img style="margin-left:15px; width:45px;" src="~/Image/indir-removebg-preview.png">
                                            <div class="timeline-item">


                                                <div class="timeline-body">
                                                    <b style="color:blue"> @x.GONDEREN</b>-<b>@x.KONU</b>
                                                    <p>@x.ICERIK</p>
                                                </div>
                                                <div class="timeline-footer">
                                                    <a class="btn btn-info btn-sm" href="/Annunciation/EditAnnunciation/@x.ID"><i class="fas fa-cog"></i> Düzenle</a>
                                                    <a class="btn btn-danger btn-sm" href="/Annunciation/Delete/@x.ID"><i class="fas fa-trash"></i> Sil</a>


                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- /.container-fluid -->
    </section>

    <!-- /.content-wrapper -->
    <!-- ./wrapper -->
    <!-- jQuery -->

</body>
</html>



