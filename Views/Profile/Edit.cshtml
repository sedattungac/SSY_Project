@model SSY_Project.Models.Entity.Data_Users

@using (Html.BeginForm("EditProfile", "Profile", FormMethod.Post))
{

<form class="form-horizontal">



    @Html.HiddenFor(x => x.ID)



    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Kullanıcı Adı :</label>

        <div class="col-sm-10">


            @Html.TextBoxFor(x => x.USERNAME, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Telefon :</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.GSM, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Mail :</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control" })

        </div>

    </div>



    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Şifre :</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.PASSWORD, new { @class = "form-control" })

        </div>

    </div>
    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Foto :</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.FOTO_URL, new { @class = "form-control" })

        </div>

    </div>
    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">Resim :</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.FOTO_URL, new { type = "file" })
            @*<input class="form-control" type="file" name="FOTO_URL" />*@

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Güncelle</button>

        </div>

    </div>

</form>
}



