@using SSY_Project.Models.Entity
@model List<Data_CariBilgi>
@{
    ViewBag.Title = "CustomerInfo";
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
}

<div class="mt-5 card">
    <div class="card-header">
        <h3 class="card-title">Cari Bilgi Sayfası</h3>
    </div>
    <!-- /.card-header -->
    <br />
    <div class="mt-3 row d-flex justify-content-center">
        <a class="btn btn-primary" href="/Customer/Index"><i class="fas fa-users"></i> Cari Listesi</a> &nbsp;
        @*<a class="btn btn-primary" href="/Customer/CustomerDetail/@ViewBag.id"><i class="fas fa-users"></i> Cari Detayı</a> &nbsp;*@
        <a class="btn btn-primary" href="/Customer/OldBillofSale/@ViewBag.id"><i class="fas fa-file"></i> Eski Satış Faturaları</a> &nbsp;
        <a class="btn btn-primary" href="/Customer/LastCollection/@ViewBag.id"><i class="fas fa-edit "></i> Eski Tahsilatlar</a> &nbsp;
    </div>
    <hr />
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>RESİM</th>
                    <th>ADRES </th>
                    <th>İSTİHBARAT</th>
                    <th>SATIŞ YAPILMASIN</th>
                    <th>BAKİYE</th>
                    <th>YETKİLİ</th>
                    <th>VERGİ DAİRESİ</th>
                    <th>VERGİ NO</th>
                    <th>GSM</th>
                    <th>EMAIL</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    var bakiye = Convert.ToDecimal(customer.BAKIYE);

                    <tr>

                        <td>@customer.RESIM</td>
                        <td>@customer.ADRESFATURA</td>
                        <td>@customer.ISTIHBARAT</td>
                        @if (customer.SATISYAPILMASIN == true)
                        {
                            <td>Satış Yapılmasın</td>
                        }
                        else
                        {
                            <td>Satış Yapılsın</td>
                        }

                        @*<td>@customer.BAKIYE ₺</td>*@
                        <td> @String.Format("{0:C}", bakiye)</td>

                        <td>@customer.YETKILI</td>
                        <td>@customer.VERGIDAIRESI</td>
                        <td>@customer.VERGINO</td>
                        <td>@customer.YGSM</td>
                        <td>@customer.EMAIL</td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>



