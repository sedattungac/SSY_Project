@using SSY_Project.Models.Entity
@model List<Data_Tahsilat>
@{
    ViewBag.Title = "LastCollection";
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
}
<div class="mt-5 card">
    <div class="card-header">
        <h3 class="card-title">Geçmiş Tahsilat Listesi</h3>
    </div>
    <br />
    <div class="mt-3 row d-flex justify-content-center">
        <a class="btn btn-primary" href="/Customer/Index"><i class="fas fa-users"></i> Cari Listesi</a> &nbsp;
        <a class="btn btn-primary" href="/Customer/CustomerDetail/@ViewBag.id"><i class="fas fa-users"></i> Cari Detayı</a> &nbsp;
        <a class="btn btn-primary" href="/Customer/CustomerInfo/@ViewBag.id"><i class="fas fa-info"></i> Cari Bilgi</a> &nbsp;
        <a class="btn btn-primary" href="/Customer/OldBillofSale/@ViewBag.id"><i class="fas fa-file "></i> Eski Satış Faturaları</a> &nbsp;
    </div>
    <hr />
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>TARİH</th>
                    <th>EVRAK NO</th>
                    <th>BORÇ</th>
                    <th>ALACAK</th>
                    <th>BAKİYE</th>
                    <th>PARA BİRİMİ</th>
                    <th>DETAY</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    var date = Convert.ToDateTime(customer.TARIH);
                <tr>
                    <td>@date.ToShortDateString()</td>
                    <td>@customer.EVRAKNO</td>
                    <td>@customer.TLBORC ₺</td>
                    <td>@customer.TLALACAK ₺</td>
                    <td>@customer.TLBAKIYE ₺</td>
                    <td>@customer.PARABIRIMI</td>

                    <td><a class="btn btn-primary" href="/Customer/LastCollectionDetail/@customer.BELGEIND"><i class="fas fa-eye"></i> Detay</a></td>
                </tr>


                }
            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>



