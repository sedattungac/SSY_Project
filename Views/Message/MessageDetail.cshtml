@using SSY_Project.Models.Entity
@model List<Data_Mesajlar>
@{
    ViewBag.Title = "MessageDetail";
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
}

<html>


<body>

    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->

    <section class="content-header">

        <div class="container-fluid">

            <div class="row mb-2">

                <div class="col-sm-6">

                    <h1>Mesaj Detayları</h1>

                </div>

            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-3">

                    <a href="/Message/Inbox/" class="btn btn-primary btn-block mb-3"> <i class="fas fa-plus-circle"></i>&nbsp; Gelen Mesajlar</a>

                    <div class="card">

                        <div class="card-header">

                            <h3 class="card-title">Klasörler</h3>

                            <div class="card-tools">

                                <button type="button" class="btn btn-tool" data-card-widget="collapse">

                                    <i class="fas fa-minus"></i>

                                </button>

                            </div>

                        </div>

                        <div class="card-body p-0">

                            <ul class="nav nav-pills flex-column">

                                <li class="nav-item active">

                                    <a href="/Message/Inbox/" class="nav-link">

                                        <i class="fas fa-inbox"></i> Gelen Kutusu

                                        <span class="badge bg-primary float-right">@ViewBag.d1</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="/Message/SentMessage/" class="nav-link">

                                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                                        <span class="badge bg-olive float-right">@ViewBag.d2</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="/Message/Recycle/" class="nav-link">

                                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                                        <span class="badge bg-danger float-right">@ViewBag.d3</span>

                                    </a>

                                </li>

                            </ul>

                        </div>

                        <!-- /.card-body -->

                    </div>

                    <!-- /.card -->
                    <!-- /.card -->

                </div>

                <!-- /.col -->
                @foreach (var x in Model)
                {

                    <div class="col-md-9">

                        <div class="card card-primary card-outline">

                            <div class="card-header">

                                <h3 class="card-title">Mesajı Oku</h3>

                                <div class="card-tools">

                                    <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>

                                    <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>

                                </div>

                            </div>

                            <!-- /.card-header -->

                            <div class="card-body p-0">

                                <div class="mailbox-read-info">

                                    <h5>Konu: @x.KONU </h5>

                                    <h6>

                                        Gönderen: @x.GONDEREN

                                        <span class="mailbox-read-time float-right">Tarih: @x.TARIH</span>

                                    </h6>

                                </div>

                                <!-- /.mailbox-read-info -->

                                <div class="mailbox-controls with-border text-center">

                                    <div class="btn-group">

                                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">

                                            <i class="far fa-trash-alt"></i>

                                        </button>

                                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Reply">

                                            <i class="fas fa-reply"></i>

                                        </button>

                                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Forward">

                                            <i class="fas fa-share"></i>

                                        </button>

                                    </div>

                                    <!-- /.btn-group -->

                                    <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Print">

                                        <i class="fas fa-print"></i>

                                    </button>

                                </div>

                                <!-- /.mailbox-controls -->

                                <div class="mailbox-read-message">

                                    <p>@x.ALICI,</p>

                                    <p>

                                        @x.ICERIK


                                    </p>



                                </div>

                                <!-- /.mailbox-read-message -->

                            </div>

                            <!-- /.card-body -->
                            <!-- /.card-footer -->

                            <div class="card-footer">

                                <div class="float-right">

                                    <button type="button" class="btn btn-default"><i class="fas fa-reply"></i> Cevapla</button>

                                    <button type="button" class="btn btn-default"><i class="fas fa-share"></i> İlet</button>

                                </div>

                                <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i>Sil</button>

                                <button type="button" class="btn btn-default"><i class="fas fa-print"></i>Yazdır</button>

                            </div>

                            <!-- /.card-footer -->

                        </div>

                        <!-- /.card -->

                    </div>
                }
                <!-- /.col -->

            </div>

            <!-- /.row -->

        </div>

    </section>




</body>

</html>

