@using SSY_Project.Models.Entity
@model List<Data_Tahsilat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
}

<div class="mt-5 card">
    <div class="card-header">
        <h3 class="card-title">Yeni Tahsilat Listesi</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>TARİH</th>
                    <th>EVRAK NO</th>
                    <th>BORÇ</th>
                    <th>ALACAK</th>
                    <th>BAKİYE</th>
                    <th>PARA BİRİMİ</th>
                    @*<th>DETAY</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    var borc = Convert.ToDecimal(customer.TLBORC);
                    var alacak = Convert.ToDecimal(customer.TLALACAK);
                    var bakiye = Convert.ToDecimal(customer.TLBAKIYE);

                    var date = Convert.ToDateTime(customer.TARIH);
                <tr>
                    <td>@date.ToShortDateString()</td>
                    <td>@customer.EVRAKNO</td>
                    @*<td>@customer.TLBORC ₺</td>*@
                    <td> @String.Format("{0:C}", borc)</td>
                    @*<td>@customer.TLALACAK ₺</td>*@
                    <td> @String.Format("{0:C}", alacak)</td>
                    @*<td>@customer.TLBAKIYE ₺</td>*@
                    <td> @String.Format("{0:C}", bakiye)</td>
                    <td>@customer.PARABIRIMI</td>

                    @*<td><a class="btn btn-primary" href="/Customer/LastCollectionDetail/@customer.BELGEIND"><i class="fas fa-eye"></i> Detay</a></td>*@
                </tr>


                }
            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>

